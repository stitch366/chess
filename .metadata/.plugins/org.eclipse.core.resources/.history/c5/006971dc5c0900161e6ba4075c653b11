package application;

public class MoveSim {
	ChessUtil sim;
	String CurrentColor;
	MoveSim(ChessUtil s, String c)
	{
		this.sim = s;
		this.CurrentColor = c;
	}
	
	public boolean doesMoveNegateCheck(String pId, String newLocation)
	{
		simulateMove(pId,newLocation);
		
		if(sim.isInCheck())
		{
			return false;
		}
		else
		{
			return true;
		}
		
	}
	
	private void simulateMove(String pId, String newLocation)
	{
		String capturedPInSim = sim.getSpacePeice(newLocation);
		if(capturedPInSim != "")
		{
			sim.removeCapturedPeice(capturedPInSim);
		}
		sim.doMove(pId, newLocation);
		sim.setTurnInfo(CurrentColor);
	}
}
