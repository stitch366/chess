

public enum PeiceType {
	KING, QUEEN, BISHOP, KNIGHT, ROOK, PAWN;
	
	
	
	private Offset[] offsets;
	
	static
	{
		KING.offsets = ; 
	}
	public Offset[] getMoveOffsets()
	{
		switch(this)
		{
		case BISHOP:
			Offset[] bishopOff = {new Offset(1, 1), new Offset(1, -1), new Offset(-1, -1), new Offset(-1, 1)};
			break;
		case KING:
			Offset[] kingOff = {new Offset(1, 1), new Offset(1, 0), new Offset(1, -1), new Offset(0, -1), new Offset(-1, -1), new Offset(-1, 0), new Offset(-1, 1)};
			return kingOff;
			break;
		case KNIGHT:
			break;
		case PAWN:
			break;
		case QUEEN:
			break;
		case ROOK:
			break;
		default:
			break;
		
		}
	}
}
